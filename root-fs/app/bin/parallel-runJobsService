#!/bin/bash

set -o errexit
set -o nounset
set -o pipefail

parallel_runjobs_pid=0
while true; do
	# Check if the process is not running
	if ! ps -p $parallel_runjobs_pid > /dev/null; then
		/app/bin/parallel-runjobs-service \
		--config /app/bin/config/runJobs_conf.yaml \
		&
		parallel_runjobs_pid=$!
	fi
	sleep 60
done
